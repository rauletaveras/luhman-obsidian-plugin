{
  "name": "luhman-refactored",
  "version": "2.0.0",
  "description": "Commands for handling a zettelkasten with Luhmann-style IDs as filenames",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs --watch",
    "build": "tsc --noEmit --skipLibCheck && node esbuild.config.mjs --production",
    "lint": "eslint src --ext .ts --fix",
    "lint:check": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.{ts,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,json}\"",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf main.js styles.css",
    "prebuild": "npm run clean && npm run typecheck && npm run lint:check",
    "release": "npm run build && release-it",
    "release:beta": "npm run build && release-it --config .release-it-beta.json"
  },
  "keywords": [
    "obsidian",
    "plugin", 
    "zettelkasten",
    "notes",
    "hierarchy"
  ],
  "author": "RaÃºl E. Taveras",
  "license": "MIT",
  "dependencies": {
    "obsidian": "^1.6.7"
  },
  "devDependencies": {
    "@release-it/bumper": "^6.0.1",
    "@release-it/keep-a-changelog": "^5.0.0",
    "@types/node": "^22.5.0",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "builtin-modules": "^4.0.0",
    "esbuild": "^0.23.1",
    "eslint": "^9.9.1",
    "prettier": "^3.3.3",
    "release-it": "^17.6.0",
    "rimraf": "^6.0.1",
    "tslib": "^2.7.0",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
